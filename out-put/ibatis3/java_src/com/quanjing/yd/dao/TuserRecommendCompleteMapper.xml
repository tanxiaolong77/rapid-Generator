<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.quanjing.platform.dao.TuserRecommendCompleteDao">

	
    <resultMap id="TuserRecommendComplete" type="com.quanjing.model.platform.TuserRecommendComplete">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="recommendRuleId" column="recommend_rule_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        	id ,
        	user_id ,
        	recommend_rule_id ,
        	create_time 
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert"  useGeneratedKeys="true" keyProperty="id" 
	>
    <![CDATA[
        INSERT INTO t_user_recommend_complete (
        	id ,
        	user_id ,
        	recommend_rule_id ,
        	create_time 
        ) VALUES (
        	#{id} ,
        	#{userId} ,
        	#{recommendRuleId} ,
        	#{createTime} 
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="update">
        UPDATE t_user_recommend_complete
        <trim prefix="SET" suffixOverrides=",">  
	        <if test="@Ognl@isNotEmpty(userId)">
	        user_id = #{userId,jdbcType=BIGINT} ,
	        </if>
	        <if test="@Ognl@isNotEmpty(recommendRuleId)">
	        recommend_rule_id = #{recommendRuleId,jdbcType=INTEGER} ,
	        </if>
	        <if test="@Ognl@isNotEmpty(createTime)">
	        create_time = #{createTime,jdbcType=TIMESTAMP} 
	        </if>
 	     </trim>
        WHERE 
	        id = #{id} 
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM t_user_recommend_complete 
        WHERE
	        id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="TuserRecommendComplete">
		SELECT <include refid="columns" />
	    <![CDATA[
		    FROM t_user_recommend_complete 
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>
	
		
    <select id="findCount" resultType="long">
        SELECT count(*) FROM t_user_recommend_complete 
		<include refid="findWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="TuserRecommendComplete">
    	SELECT <include refid="columns" />
	    FROM t_user_recommend_complete 
		<include refid="findWhere"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
	<sql id="findWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND id = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(userId)">
				AND user_id = #{userId}
			</if>
	       <if test="@Ognl@isNotEmpty(recommendRuleId)">
				AND recommend_rule_id = #{recommendRuleId}
			</if>
	       <if test="@Ognl@isNotEmpty(createTimeBegin)">
				AND create_time >= #{createTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(createTimeEnd)">
				AND create_time &lt;= #{createTimeEnd}
		   </if>
		</where>
	</sql>
	
</mapper>

